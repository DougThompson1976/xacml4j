<Policy
		xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
		PolicyId="urn:org:xacml4j:tests:policy-with-obligations"
		RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:deny-overrides">
	<Description>Test policy with different obligations</Description>
	<Target/>
	<Rule
			RuleId="urn:org:xacml4j:tests:policy-with-obligations:rule1"
			Effect="Permit">
		<Condition>
			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:dayTimeDuration-equal">
				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:dayTimeDuration-one-and-only">
					<SubjectAttributeDesignator
							AttributeId="urn:oasis:names:tc:xacml:2.0:conformance-test:auth-duration"
							DataType="http://www.w3.org/TR/2002/WD-xquery-operators-20020816#dayTimeDuration"/>
				</Apply>
				<AttributeValue
						DataType="http://www.w3.org/TR/2002/WD-xquery-operators-20020816#dayTimeDuration">P5DT2H0M0S</AttributeValue>
			</Apply>
		</Condition>
	</Rule>

	<Obligations>
		<Obligation
				ObligationId="urn:org:xacml4j:tests:policy-with-obligations:obligation1"
				FulfillOn="Permit">
				<AttributeAssignment
						AttributeId="urn:org:xacml4j:tests:policy-with-obligations:obligation1:assignment1"
						DataType="http://www.w3.org/2001/XMLSchema#string">assignment1</AttributeAssignment>
		</Obligation>
		<Obligation
				ObligationId="urn:org:xacml4j:tests:policy-with-obligations:obligation2"
				FulfillOn="Permit">
			<AttributeAssignment
					AttributeId="urn:org:xacml4j:tests:policy-with-obligations:obligation2:assignment1"
					DataType="http://www.w3.org/2001/XMLSchema#string">
				<SubjectAttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id" DataType="http://www.w3.org/2001/XMLSchema#string"/>
			</AttributeAssignment>
		</Obligation>
	</Obligations>
</Policy>
