<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xacml="http://www.artagon.com/schema/xacml/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
						http://www.artagon.com/schema/xacml/spring http://www.artagon.com/schema/xacml/spring/xacml.xsd">
 	
	
	<bean id="testProvider1" class="com.artagon.xacml.spring.TestInstanceFunctions"/>
	
	<xacml:FunctionProviders id="extensionFunctions">
		<xacml:FunctionProvider class="com.artagon.xacml.spring.TestStaticFunctions"/>
		<xacml:FunctionProvider ref="testProvider1"/>
	</xacml:FunctionProviders>
	
	<xacml:InMemoryPolicyRepository id="repository" resources="resources" extensionFunctions="extensionFunctions"/>
	
	<util:list id="attributeResolvers">
		<bean class="com.artagon.xacml.spring.pip.AnnotationBasedAttributeResolverFactoryBean">
			<beans:property name="resolverBean">
				<beans:bean class="com.artagon.xacml.v3.sdk.DefaultEnviromentAttributeResolver"/>
			</beans:property>
		</bean>
	</util:list>
	
	<xacml:PolicyInformationPoint id="pip" attributeResolvers="attributeResolvers"/>
	
	<bean id="resources" class="com.artagon.xacml.spring.ResourceCollection">
		<beans:property name="resources">
			<util:list>
				<value>classpath:/Policy1.xml</value>
			</util:list>
		</beans:property>
	</bean>
	
	<xacml:PolicyDomain id="domain" name="TestDomain">
		<xacml:PolicySetIdReference Version="1.+">aaaaaa</xacml:PolicySetIdReference>
		<xacml:PolicySetIdReference Version="1.+">11111</xacml:PolicySetIdReference>
	</xacml:PolicyDomain>	
	 
	<xacml:PolicyDecisionPoint
		id="pdp"
		domain="domain" 
		repository="repository" 
		pip="pip"/>
	
</beans>
