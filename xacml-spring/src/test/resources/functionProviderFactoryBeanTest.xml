<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xacml-spring="http://www.artagon.com/schema/xacml/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
						http://www.artagon.com/schema/xacml/spring http://www.artagon.com/schema/xacml/spring/xacml.xsd">
 	
	
	<bean id="testProvider1" class="com.artagon.xacml.spring.TestInstanceFunctions"/>
	
	<xacml-spring:FunctionProviders id="extensionFunctions">
		<xacml-spring:FunctionProvider class="com.artagon.xacml.spring.TestStaticFunctions"/>
		<xacml-spring:FunctionProvider ref="testProvider1"/>
	</xacml-spring:FunctionProviders>
	
	<bean id="resources" class="com.artagon.xacml.spring.ResourceCollection">
		<beans:property name="resources">
			<util:list>
				<value>classpath:/Policy1.xml</value>
			</util:list>
		</beans:property>
	</bean>
	
	<xacml-spring:InMemoryPolicyRepository 
		id="repository" 
		resources="resources" 
		extensionFunctions="extensionFunctions"/>
	
	<util:list id="attributeResolvers">
	</util:list>
	
	<beans:bean id="testResolver" class="com.artagon.xacml.spring.pip.TestResolver"/>
	
	<beans:bean id="pip" class="com.artagon.xacml.spring.pip.PolicyInformationPointFactoryBean">
		<beans:constructor-arg>
			<beans:bean class="com.artagon.xacml.spring.pip.ResolverRegistryFactoryBean">
				<beans:property name="attributeResolvers">
					<util:list>
						<beans:bean class="com.artagon.xacml.spring.pip.AttributeResolverRegistrationFactoryBean">
							<beans:property name="resolver" ref="testResolver"/>
						</beans:bean>
					</util:list>
				</beans:property>
				<beans:property name="contentResolvers">
					<util:list>
						<beans:bean class="com.artagon.xacml.spring.pip.ContentResolverRegistrationFactoryBean">
							<beans:property name="resolver" ref="testResolver"/>
						</beans:bean>
					</util:list>
				</beans:property>
			</beans:bean>
		</beans:constructor-arg>
	</beans:bean>
	 
	<xacml-spring:PolicyDecisionPoint
		id="pdp" 
		repository="repository" 
		pip="pip">
		<xacml-spring:PolicySetIdReference>testId</xacml-spring:PolicySetIdReference>
	</xacml-spring:PolicyDecisionPoint>
	
</beans>
