<?xml version="1.0" encoding="UTF-8"?>
<Policy
      xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:oasis:names:tc:xacml:2.0:policy:schema:os http://docs.oasis-open.org/xacml/2.0/access_control-xacml-2.0-policy-schema-os.xsd"
      PolicyId="urn:tve:policy:content:ratings"
      RuleCombiningAlgId="urn:oasis:names:tc:xacml:3.0:rule-combining-algorithm:permit-unless-deny">
    <Description>A TV Everywhere video assets level parental control policy</Description>
   <Target/>
   <Rule Effect="Deny" RuleId="urn:tve:rule:content:ratings:mrss:mpaa">
   		<Condition>
   			<Apply FunctionId="urn:comcast:names:tc:xacml:1.0:function:mpaa-is-greater-than">
   				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
   					<AttributeSelector RequestContextPath="./*[local-name()='rating'][namespace-uri()='http://search.yahoo.com/mrss/'][@scheme='urn:mpaa']/text()" 
    					DataType="http://www.w3.org/2001/XMLSchema#string"/>
    			</Apply>
   				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
   					<SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
   						AttributeId="urn:comcast:names:1.0:subscriber:pc:ratings:mpaa"/>
   				</Apply>
   			</Apply>
   		</Condition>
   </Rule>
   <Rule Effect="Deny" RuleId="urn:tve:rule:content:ratings:mrss:v-chip">
   		<Condition>
   			<Apply FunctionId="urn:comcast:names:tc:xacml:1.0:function:vchip-is-greater-than">
   				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
   					<AttributeSelector RequestContextPath="./*[local-name()='rating'][namespace-uri()='http://search.yahoo.com/mrss/'][@scheme='urn:v-chip']/text()" 
    					DataType="http://www.w3.org/2001/XMLSchema#string"/>
    			</Apply>
   				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
   					<SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
   						AttributeId="urn:comcast:names:1.0:subscriber:pc:ratings:v-chip"/>
   				</Apply>
   			</Apply>
   		</Condition>
   </Rule>
   <Rule Effect="Deny" RuleId="urn:tve:rule:content:ratings:attribute:mpaa">
   		<Condition>
   			<Apply FunctionId="urn:comcast:names:tc:xacml:1.0:function:mpaa-is-greater-than">
	   			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
	   				<ResourceAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
	    					AttributeId="urn:mpaa"/>
	    			</Apply>
	   			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
	   				<SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
	   						AttributeId="urn:comcast:names:1.0:subscriber:pc:ratings:mpaa"/>
	   			</Apply>		
	   		</Apply>   		
   		</Condition>
   </Rule>
   <Rule Effect="Deny" RuleId="urn:tve:rule:content:ratings:attribute:v-chip">
   		<Condition>
   			<Apply FunctionId="urn:comcast:names:tc:xacml:1.0:function:mpaa-is-greater-than">
	   			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
	   				<ResourceAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
	    					AttributeId="urn:v-chip"/>
	    			</Apply>
	   			<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-one-and-only">
	   				<SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" 
	   						AttributeId="urn:comcast:names:1.0:subscriber:pc:ratings:v-chip"/>
	   			</Apply>		
	   		</Apply>   		
   		</Condition>
   </Rule>
   <Obligations>
   		<Obligation FulfillOn="Deny" ObligationId="urn:tve:names:1.0:obligations:restric-pc"/>
   </Obligations>
</Policy>

